" scroll
"
noremap j 5j
noremap k 5k
noremap h 5h
noremap l 5l

noremap b <c-u>
noremap <space> <c-d>

" history
"
noremap B :back<cr>
noremap <bs> :back<cr>
noremap <s-bs> :forward<cr>

" invalidize
"
noremap <F1> <nop>

" tab
"
noremap d <nop>
noremap x :tabclose<cr>
noremap <c-s-p> :tabmove -1<cr>
noremap <c-s-n> :tabmove +1<cr>
